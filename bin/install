#!/usr/bin/env zsh
set -euo pipefail
root="$PWD"
mkdir -p "$HOME/.local/bin"
ln -sf "$root/bin/flatshareNaija" "$HOME/.local/bin/flatshareNaija"
case ":$PATH:" in
  *":$HOME/.local/bin:"*) ;;
  *) echo 'export PATH="$HOME/.local/bin:$PATH"' >> "$HOME/.zshrc"; echo "Added to PATH. Restart shell." ;;
esac
echo "Installed: flatshareNaija"
